<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myhealthcare">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".controllers.DoctorProfile"></activity>
        <activity android:name=".controllers.Privacy" />
        <activity android:name=".controllers.TermsAndCondition" />
        <activity android:name=".controllers.About" />
        <activity android:name=".controllers.EditProfile" />
        <activity android:name=".controllers.Profile"></activity>
        <activity android:name=".controllers.Doctor" />
        <activity android:name=".controllers.Report" />
        <activity android:name=".controllers.Appointment" />
        <activity android:name=".controllers.Prescription" />
        <activity android:name=".controllers.Dashboard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controllers.SplashScreen">

        </activity>
        <activity android:name=".controllers.RegistrationPage" />
        <activity android:name=".controllers.LoginPage" />
        <activity android:name=".controllers.WelcomeScreen" />
    </application>

</manifest>